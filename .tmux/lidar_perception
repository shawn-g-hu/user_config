new -s core
send-keys -t core '. ~/.bashrc'
send-keys -t core 'roscore'

new -s guardian -c ~/drive/opt/debug
send-keys -t guardian '. ~/.bashrc'
send-keys -t guardian './run/perception/ros_launch.sh ./run/perception/launch_guardian_debug.xml'

new -s operator -c ~/drive/tools/ros_runtime
send-keys -t operator 'source install/setup.bash'
