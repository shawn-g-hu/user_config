send-keys -t operator 'roslaunch ros_guardian_operate_debug.launch'

new -s tf_publisher -c ~/drive/tools/calibration/sensor_tf_publisher/run
send-keys -t tf_publisher '. ~/.bashrc'
send-keys -t tf_publisher './ros_launch.sh car_config_tf_broadcaster.launch'

new -s rosbag -c ~/rosbags
